@model CrudOperationUsingEF.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Name)
        @Html.TextBoxFor(x => x.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.BirthDate)
        @Html.TextBoxFor(x => x.Customer.BirthDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=> x.Customer.BirthDate)
    </div>
    @*<div class="form-group">
            @Html.LabelFor(x => x.IsSubscribedToNewsletter)
            @Html.CheckBoxFor(x => x.IsSubscribedToNewsletter, new { @class = "form-control" })
        </div>*@

    <div class="form-check">
        @* form-check-input *@
        @Html.CheckBoxFor(x => x.Customer.IsSubscribedToNewsletter, new { @class = "form-check-input" })

        <label class="form-check-label" for="flexCheckDefault">
            Subscribed to News Letter ?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.MembershipTypeId)
        @Html.DropDownListFor(x => x.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),"Select Membership Type" ,new { @class = "form-select" })
    </div>
    @Html.HiddenFor(x=> x.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
