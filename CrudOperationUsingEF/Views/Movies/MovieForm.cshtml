@model CrudOperationUsingEF.ViewModels.MovieFromViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Name)
        @Html.TextBoxFor(x => x.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.GenreId)
        @Html.DropDownListFor(x => x.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre Type", new { @class = "form-select" })
    </div>
    @*<div class="form-group">
            @Html.LabelFor(x => x.IsSubscribedToNewsletter)
            @Html.CheckBoxFor(x => x.IsSubscribedToNewsletter, new { @class = "form-control" })
        </div>*@

    <div class="form-group">
        @Html.LabelFor(x => x.Movie.NumberInStock)
        @Html.TextBoxFor(x => x.Movie.NumberInStock, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x => x.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

